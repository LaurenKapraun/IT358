/*QUESTION B
import Foundation

class Fraction {
    let numerator, denominator:Int

    init(numerator: Int, denominator: Int) {
        self.numerator = numerator
        self.denominator = denominator
    }
}

func add(fraction1:Fraction, fraction2:Fraction) -> Fraction{
    let commonDenominator = fraction1.denominator%fraction2.denominator
    
    let numerator = (fraction2.numerator*commonDenominator) + fraction1.numerator
    let denominator = commonDenominator*commonDenominator
    
    return Fraction(numerator: numerator, denominator: denominator)
}

func subtract(fraction1:Fraction, fraction2:Fraction) -> Fraction{
    let commonDenominator = fraction1.denominator%fraction2.denominator
    let largerDenominator = max(fraction1.denominator, fraction2.denominator)
    
    let numerator = (fraction1.numerator*commonDenominator) - fraction2.numerator
    let denominator = commonDenominator*largerDenominator
    
    return Fraction(numerator: numerator, denominator: denominator)
}

func multiply(fraction1:Fraction, fraction2:Fraction) -> Fraction{
    let numerator = fraction1.numerator*fraction2.numerator
    let denominator = fraction1.denominator*fraction2.denominator
    
    return Fraction(numerator: numerator, denominator: denominator)
}

func divide(fraction1:Fraction, fraction2:Fraction) -> Fraction{
    let numerator = fraction1.numerator*fraction2.denominator
    let denominator = fraction1.denominator*fraction2.numerator
    
    return Fraction(numerator: numerator, denominator: denominator)
}

let f1 = Fraction(numerator: 1, denominator: 2)
let f2 = Fraction(numerator: 1, denominator: 4)
let f3 = Fraction(numerator: 1, denominator: 3)

let fAdd = add(fraction1:f1, fraction2:f2)
let fSubtract = subtract(fraction1:f1, fraction2:f3)
let fMultiply = multiply(fraction1:f1, fraction2:f3)
let fDivide = divide(fraction1:f1, fraction2:f3)

print("The addition of 1/2 + 1/4 is: \(fAdd.numerator)/\(fAdd.denominator)")
print("The subtraction of 1/2 + 1/3 is: \(fSubtract.numerator)/\(fSubtract.denominator)")
print("The multiplication of 1/3 + 1/3 is: \(fMultiply.numerator)/\(fMultiply.denominator)")
print("The division of 1/2 + 1/3 is: \(fDivide.numerator)/\(fDivide.denominator)")

//print(fAdd.reduce())
*/

